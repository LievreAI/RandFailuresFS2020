<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="Button" x:Key="OverviewButton">
        <Setter Property="Background" Value="#c3c3c3 " />
        <Setter Property="Margin" Value="10"/>
        <Setter Property="Padding" Value="20 5 20 5"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="MinWidth" Value="110"/>
        <Setter Property="FontFamily" Value="Bahnschrift Light Condensed"/>
        <Style.Resources>
            <Style TargetType="Border">
                <Setter Property="CornerRadius" Value="5" />
            </Style>
        </Style.Resources>
    </Style>

    <Style TargetType="TextBlock" x:Key="OverviewText">
        <Setter Property="FontSize" Value="35"/>
        <Setter Property="FontFamily" Value="Bahnschrift Light Condensed"/>
        <Setter Property="Foreground" Value="#85a2c0"/>
    </Style>

</ResourceDictionary>